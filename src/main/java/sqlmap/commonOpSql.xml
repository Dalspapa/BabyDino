<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="dino.commonop">
	<!-- Make a TeacherCard -->
	<select id="t_job_opList" resultType="dino.dto.CommonOpDto">
		select 
			idx, op, c_introduce 
		from
			d_common_option
		where
			c_category = 11
		order by idx desc
			
	</select>
	
	<select id="k_type_opList" resultType="dino.dto.CommonOpDto">
		select
			idx, c_introduce, op
		from 
			d_common_option
		where
			c_category = 10
		order by idx asc
	</select>
	
	<select id="t_care_opList" resultType="dino.dto.CommonOpDto">
		select
			idx, c_introduce
		from
			d_common_option
		where
			c_category = 5
		order by idx asc
	</select>
	
	<select id="t_date_opList" resultType="dino.dto.CommonOpDto">
		select 
			idx, c_introduce 
		from 
			d_common_option 
		where 
			c_category = 2 
		order by idx asc
	</select>
	
	<select id="t_time_opList" resultType="dino.dto.CommonOpDto">
		select 
			idx, c_introduce 
		from 
			d_common_option 
		where 
			c_category = 1 
		order by idx asc
	</select>
	
	<select id="t_bank_opList" resultType="dino.dto.CommonOpDto">
		select
			idx, c_introduce 
		from 
			d_common_option 
		where 
			c_category = 4 
		order by idx asc
	</select>	

	<!-- Make a KidsCard -->
	<select id="k_tendency" resultType="dino.dto.CommonOpDto">
         select 
            * 
         from 
            d_common_option 
         where 
            c_category=9
   </select>
   
   <select id="reportOpList" resultType="dino.dto.CommonOpDto">
	   SELECT
	   		*
	   FROM
	   		d_common_option
	   WHERE
	   		c_category = 5
   
   </select>
   
   <!-- 공지사항 -->
	<select id="notice" resultType="dino.dto.CommonOpDto">
		select 
		 	* 
		 from 
		 	d_common_option 
		 where 
		 	c_category = 28
	</select>
	<!-- 자주 묻는 질문(회원관련) -->
	<select id="qna" resultType="dino.dto.CommonOpDto">
		select 
		 	* 
		 from 
		 	d_common_option 
		 where 
		 	c_category = 29
	</select>
	<!-- 자주 묻는 질문(정부지원관련) -->
	<select id="government" resultType="dino.dto.CommonOpDto">
		select 
		 	* 
		 from 
		 	d_common_option 
		 where 
		 	c_category = 30
	</select>
	<!-- 자주 묻는 질문(결제 환불관련) -->
	<select id="pay" resultType="dino.dto.CommonOpDto">
		select 
		 	* 
		 from 
		 	d_common_option 
		 where 
		 	c_category = 31
	</select>
	
</mapper>





