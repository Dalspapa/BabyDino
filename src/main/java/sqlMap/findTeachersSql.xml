<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper 
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="dino.findTeachers">
	<select id="teacherInfo" parameterType="int" resultType="dino.findteachers.model.TeacherInfoDto">
		SELECT 
            dt.*, dm.name, dm.birth 
		FROM 
			d_teacher dt     
        LEFT JOIN 
        	d_member dm 
        ON 
        	dm.idx = dt.d_member_idx
        WHERE 
        	dm.idx = 41		
	</select>
</mapper>