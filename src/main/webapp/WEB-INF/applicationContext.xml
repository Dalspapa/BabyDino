<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

<!-- myBatis Setting Area -->
	<!-- 1. dataSource -->
    <bean id="dataSource" class="org.apache.commons.dbcp.BasicDataSource">
	    <property name="driverClassName" value="oracle.jdbc.driver.OracleDriver"/>
	    <property name="url" value="jdbc:oracle:thin:@14.35.253.174:1521:xe"/>
	    <property name="username" value="hr"/>
	    <property name="password" value="1234"/>
    </bean>
	<!-- 2. transactionManager -->
	<bean id="transactionManager" class="org.springframework.jdbc.datasource.DataSourceTransactionManager">
		<property name="dataSource" ref="dataSource"/>
	</bean>
	<!-- 3. myBatis -->
	<bean id="sqlSessionFactoryBean" class="org.mybatis.spring.SqlSessionFactoryBean">
		<property name="dataSource" ref="dataSource"/>
		<property name="configLocation" value="classpath:/mybatis-config.xml"/>
	</bean>
	<bean id="sqlSessionTemplate" class="org.mybatis.spring.SqlSessionTemplate">
		<constructor-arg name="sqlSessionFactory" ref="sqlSessionFactoryBean"/>
	</bean>

<!-- DAO Area -->
	<bean id="empDao" class="test.emp.model.EmpDAOImple">
			<constructor-arg ref="sqlSessionTemplate"/>
	</bean>
	<bean id="commonopDao" class="dino.commonop.model.CommonOpDAOImple">
			<constructor-arg ref="sqlSessionTemplate"/>
	</bean>
<!-- Service Area -->
	<bean id="commonOpService" class="dino.commonop.model.CommonOpServiceImple">
		<property name="commonopDao" ref="commonopDao"></property>
	</bean>
</beans>
